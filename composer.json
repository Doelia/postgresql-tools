{
    "name": "swouters/postgresql-tools",
    "description": "PHP package containing a set of tools to build SQL queries",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "SWouters\\PostgreSQLTools\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "StÃ©phane Wouters",
            "email": "contact@stephanewouters.fr"
        }
    ],
    "scripts": {
        "check": [
            "./vendor/bin/phpunit",
            "vendor/bin/phpstan analyse --memory-limit=1G",
            "vendor/bin/phpcs src"
        ]
    },
    "require": {
        "php": ">=8.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^3.13"
    }
}
